
@model mission6.Models.MovieForm
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Fill out movie info:</h2>

<br>
<br>

<form method="post" asp-action="MovieStuff">
    <label asp-for="Category">Category</label>
    <input type="text" asp-for="Category">
    <br>
    <label asp-for="Title">Title</label>
    <input type="text" asp-for="Title">
    <br>
    <label asp-for="Year">Year</label>
    <input type="number" asp-for="Year">
    <br>
    <label asp-for="Director">Director</label>
    <input type="text" asp-for="Director">
    <br>
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
    </select>
    <br>
    <label asp-for="LentTo">Lent To</label>
    <input type="text" asp-for="LentTo">
    <br>
    <label asp-for="Edited">Edited?</label>
    <select asp-for="Edited">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>
    <br>
    <Label asp-for="Notes">Notes: </Label>
    <br>
    <textarea asp-for="Notes" cols="30" rows=10 ></textarea>

    <button type="submit">Submit</button>
</form>
